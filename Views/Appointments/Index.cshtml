@model IEnumerable<Grosu_Andrada_ClinicAppointments.Models.Appointment>

@{
    ViewData["Title"] = "Programări";
}

<h1>Programări</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Creează programare</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Pacient</th>
            <th>Doctor</th>
            <th>Data și ora</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@(item.Patient != null ? item.Patient.FirstName + " " + item.Patient.LastName : "")</td>
                <td>@(item.Doctor != null ? item.Doctor.FirstName + " " + item.Doctor.LastName : "")</td>
                <td>@item.AppointmentDate.ToString("dd.MM.yyyy HH:mm")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
