@model Grosu_Andrada_ClinicAppointments.Models.Appointment

@{
    ViewData["Title"] = "Editează programare";
}

<h1>Editează programare</h1>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <input type="hidden" asp-for="ID" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="PatientID" class="control-label">Pacient</label>
                <select asp-for="PatientID" class="form-control"
                        asp-items="ViewBag.PatientID"></select>
                <span asp-validation-for="PatientID" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="DoctorID" class="control-label">Doctor</label>
                <select asp-for="DoctorID" class="form-control"
                        asp-items="ViewBag.DoctorID"></select>
                <span asp-validation-for="DoctorID" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="AppointmentDate" class="control-label">Data și ora</label>
                <input asp-for="AppointmentDate" class="form-control" type="datetime-local" />
                <span asp-validation-for="AppointmentDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Salvează" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary ms-2">Înapoi la listă</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
