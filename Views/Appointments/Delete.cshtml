@model Grosu_Andrada_ClinicAppointments.Models.Appointment

@{
    ViewData["Title"] = "Șterge programare";
}

<h1>Șterge programare</h1>
<hr />

<h3>Ești sigur(ă) că vrei să ștergi această programare?</h3>

<dl class="row">
    <dt class="col-sm-2">Pacient</dt>
    <dd class="col-sm-10">
        @(Model.Patient != null ? Model.Patient.FirstName + " " + Model.Patient.LastName : "")
    </dd>

    <dt class="col-sm-2">Doctor</dt>
    <dd class="col-sm-10">
        @(Model.Doctor != null ? Model.Doctor.FirstName + " " + Model.Doctor.LastName : "")
    </dd>

    <dt class="col-sm-2">Data și ora</dt>
    <dd class="col-sm-10">
        @Model.AppointmentDate.ToString("dd.MM.yyyy HH:mm")
    </dd>
</dl>

<form asp-action="Delete">
    <input type="hidden" asp-for="ID" />
    <input type="submit" value="Șterge" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-secondary ms-2">Renunță</a>
</form>
