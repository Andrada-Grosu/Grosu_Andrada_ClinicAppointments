@model IEnumerable<Grosu_Andrada_ClinicAppointments.Models.Specialty>

@{
    ViewData["Title"] = "Specializări";

    string currentFilter = ViewData["CurrentFilter"] as string ?? "";
    string nameSortParm = ViewData["NameSortParm"] as string ?? "";
}

<h1>Specializări</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Adaugă specializare</a>
</p>

<form asp-action="Index" method="get" class="row mb-3">
    <div class="col-md-4">
        <input type="text"
               name="searchString"
               value="@currentFilter"
               class="form-control"
               placeholder="Caută după nume..." />
    </div>
    <div class="col-md-2">
        <button type="submit" class="btn btn-primary">Caută</button>
    </div>
    <div class="col-md-2">
        <a asp-action="Index" class="btn btn-outline-secondary">Resetează</a>
    </div>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @* Nume – link pentru sortare A–Z / Z–A *@
                <a asp-action="Index"
                   asp-route-sortOrder="@nameSortParm"
                   asp-route-searchString="@currentFilter">
                    Nume
                </a>
            </th>
            <th>
                Descriere
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Description
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
