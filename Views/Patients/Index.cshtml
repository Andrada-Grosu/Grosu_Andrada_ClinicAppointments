@model IEnumerable<Grosu_Andrada_ClinicAppointments.Models.Patient>

@{
    ViewData["Title"] = "Pacienți";

    string currentName = ViewData["CurrentName"] as string ?? "";
    string currentGender = ViewData["CurrentGender"] as string ?? "";
    int? currentAge = ViewData["CurrentAge"] as int?;
    string nameSortParm = ViewData["NameSortParm"] as string ?? "";
    string ageSortParm = ViewData["AgeSortParm"] as string ?? "Age";
}

<h1>Pacienți</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Adaugă pacient</a>
</p>

<form asp-action="Index" method="get" class="mb-3">
    <div class="row g-2">
        <div class="col-md-4">
            <input type="text"
                   name="searchName"
                   value="@currentName"
                   class="form-control"
                   placeholder="Caută după nume..." />
        </div>

        <div class="col-md-2">
            <input type="number"
                   name="age"
                   value="@(currentAge?.ToString())"
                   class="form-control"
                   placeholder="Vârstă" />
        </div>

        <div class="col-md-3">
            <select name="gender" class="form-control">
                <option value="">Toate genurile</option>

                @if (currentGender == "Male")
                {
                    <option value="Male" selected>Masculin</option>
                }
                else
                {
                    <option value="Male">Masculin</option>
                }

                @if (currentGender == "Female")
                {
                    <option value="Female" selected>Feminin</option>
                }
                else
                {
                    <option value="Female">Feminin</option>
                }
            </select>
        </div>

        <div class="col-md-3">
            <button type="submit" class="btn btn-primary me-2">Filtrează</button>
            <a asp-action="Index" class="btn btn-outline-secondary">Resetează</a>
        </div>
    </div>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @* Nume complet – link de sortare *@
                <a asp-action="Index"
                   asp-route-sortOrder="@nameSortParm"
                   asp-route-searchName="@currentName"
                   asp-route-age="@(currentAge?.ToString())"
                   asp-route-gender="@currentGender">
                    Nume complet
                </a>
            </th>
            <th>Email</th>
            <th>Telefon</th>
            <th>Gen</th>
            <th>
                @* Vârstă – link de sortare *@
                <a asp-action="Index"
                   asp-route-sortOrder="@ageSortParm"
                   asp-route-searchName="@currentName"
                   asp-route-age="@(currentAge?.ToString())"
                   asp-route-gender="@currentGender">
                    Vârstă
                </a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@($"{item.FirstName} {item.LastName}")</td>
                <td>@item.Email</td>
                <td>@item.Phone</td>
                <td>@item.Gender</td>
                <td>@item.Age</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>  |
                    <a asp-controller="PredictionApi" asp-action="Index" asp-route-pacientId="@item.ID" class="btn btn-sm btn-info">
                        **Prezice No-show**
                    </a>
                        
                </td>
            </tr>
        }
    </tbody>
</table>
